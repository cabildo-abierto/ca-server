{
  "lexicon": 1,
  "id": "ar.cabildoabierto.embed.visualization",
  "defs": {
    "main": {
      "type": "object",
      "required": ["dataSource", "spec"],
      "properties": {
        "dataSource": {
          "type": "union",
          "refs": [
            "#datasetVisualization",
            "#topicListVisualization"
          ]
        },
        "title": {
          "type": "string"
        },
        "spec": {
          "type": "union",
          "refs": [
            "#hemicycleVisualization",
            "#barplot",
            "#scatterplot",
            "#histogram",
            "#lines"
          ]
        }
      }
    },
    "datasetVisualization": {
      "type": "object",
      "properties": {
        "dataset": { "type": "string", "format": "at-uri" }
      }
    },
    "topicListVisualization": {
      "type": "object",
      "properties": {

      }
    },
    "hemicycleVisualization" : {
      "type": "object",
      "properties": {

      }
    },
    "barplot": {
      "type": "object",
      "properties": {
        "xlabel": {"type": "string"},
        "ylabel": {"type": "string"}
      }
    },
    "scatterplot": {
      "type": "object",
      "properties": {
        "xlabel": {"type": "string"},
        "ylabel": {"type": "string"}
      }
    },
    "histogram": {
      "type": "object",
      "properties": {
        "xlabel": {"type": "string"},
        "normalized": {"type": "boolean"}
      }
    },
    "lines": {
      "type": "object",
      "properties": {
        "xlabel": {"type": "string"},
        "ylabel": {"type": "string"}
      }
    }
  }
}